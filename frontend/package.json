{
  "name": "avalon-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    // =====================
    // Development
    // =====================
    "dev:dev": "vite --mode dev --port 3000",
    "dev:test": "vite --mode test --port 3001",
    "dev:preprod": "vite --mode preprod --port 3002",

    // =====================
    // Build for production / preprod / test
    // =====================
    "build:dev": "vite build --mode dev",        // сборка для DEV
    "build:test": "vite build --mode test",      // сборка для TEST
    "build:preprod": "vite build --mode preprod",// сборка для PREPROD

    // =====================
    // Preview / serve locally
    // =====================
    "preview:dev": "vite preview --port 5000",
    "preview:test": "vite preview --port 5001",
    "preview:preprod": "vite preview --port 5002"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "@vitejs/plugin-react": "^5.1.0"
  }
}
